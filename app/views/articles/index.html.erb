<div class="">
	<% if @articles.present? %>		
		<table class="table table-striped" id="tblArticle">
		<thead>
			<tr>
				<td>Title</td>
				<td>Author</td>
				<td>Edit</td>
				<td>Show</td>
				<td>Delete</td>
			</tr>
		</thead>
			<tbody>
				<% @articles.each do |article| %>
					<tr>
						<td><%= article.title %></td>
						<td><%= article.user.try(:full_name) %></td>
						<td><%= link_to "Edit", edit_article_path(article),class: "btn btn-primary" ,id: "edit_article_#{article.id}"%></td>
						<td><%= link_to "Show", article_path(article) ,class: "btn btn-primary",id: "show_article_#{article.id}"%></td>
						<td><%= link_to "Delete",article_path(article),class: "btn btn-warning", method: :delete,id: "article_#{article.id}"%></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	<% else %>
		<div class="alert alert-info">No article founds</div>
	<% end %>
	<div>
		<%= link_to("New Article",new_article_path,class:"btn btn-primary pull-right") %>
	</div>
</div>
