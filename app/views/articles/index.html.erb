<div class="row">
	<% if @articles.present? %>
		<span class="col-md-12 alert alert-info">
			You have <%= @articles.count  %> articles so far.			
		</span>
		<table class="table table-striped">
		<thead>
			<tr>
				<td>Title</td>
				<td>Author</td>
				<td>Edit</td>
				<td>Show</td>
				<td>Delete</td>
			</tr>
		</thead>
			<tbody>
				<% @articles.each do |article| %>
					<tr>
						<td><%= article.title %></td>
						<td><%= article.body %></td>
						<td><%= link_to "Edit", edit_article_path(article),class: "btn btn-primary" %></td>
						<td><%= link_to "Show", article_path(article) ,class: "btn btn-primary"%></td>
						<td><%= link_to "Delete",article_path(article),class: "btn btn-warning", id: "article_#{article.id}"%></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	<% else %>
		No article founds
	<% end %>
	<div>
		<%= link_to("New Article",new_article_path,class:"btn btn-primary pull-right") %>
	</div>
</div>
