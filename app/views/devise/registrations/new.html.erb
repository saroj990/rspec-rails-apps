<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:multipart => true}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autocomplete: "off",class: "form-control flat-text-box" %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autocomplete: "off",class: "form-control flat-text-box" %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number, autocomplete: "off",class: "form-control flat-text-box" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,class: "form-control flat-text-box" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",class: "form-control flat-text-box" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control flat-text-box" %>
  </div>
  <div class="field">
      <%= f.label :avatar %><br />
      <%= f.file_field :avatar%>
  </div>

  <!-- <div class="col-md-12 margin-top">
  <label>Roles</label>
     <% for role in %w[admin author reader] %>
       <div class="col-md-12">
         <%= check_box_tag "user[roles][#{role}]", role, @user.roles.include?(role), {:name => "user[roles][]"}%>
        <%= label_tag "user_roles_#{role}", role.to_s.humanize %><br />
       </div>      
    <% end %>
    <%= hidden_field_tag "user[roles][]", "" %>
  </div>
 -->
  <div class="actions margin-top" >
    <%= f.submit "Sign up" ,class: "btn btn-primary"%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
