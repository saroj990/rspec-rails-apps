<h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>    
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email, autofocus: true ,class: "form-control flat-text-box" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" ,class: "form-control flat-text-box"%>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    <% if role.eql? "Admin" %>
      <%= hidden_field_tag "role" , role %>
      <div class="actions">
        <%= f.submit "Log in", id: "admin_login",class: "btn btn-primary" %>
      </div>
    <% else %>
       <%= hidden_field_tag "role" , role %>
      <div class="actions">
        <%= f.submit "Log in",id: "author_login",class: "btn btn-primary" %>
      </div>
    <% end %>      
  <% end %>
  <%= render "devise/shared/links" %>