<div class="commentForm margin-top">
    <%= form_for(@comment,:url => url,:method => method.to_sym ,remote: true) do |f| %>
      <%= f.text_area :text, class: "form-control",rows:"5", cols:"10" ,id: "comment_form_text" %>      
      <div class="margin-top">
      	<%= f.hidden_field :user_id , value: current_user.id %>
      	<%= f.hidden_field :article_id, value: @article.id %>
      	<%= f.submit class: "btn btn-primary" %>
      </div>
      
    <% end %>
</div>
